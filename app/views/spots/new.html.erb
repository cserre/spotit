<div class="title-new text-center">
  <h2>Publiez votre annonce</h2>
  <p>Spotit vous permet de gagner de l'argent en louant votre logement</p>
</div>

<div class="background-grey">
  <div class="container">
    <div class="row">
      <div class="col-xs-6 col-sm-6 col-md-6">
        <div class="margin-form">
          <%= simple_form_for @spot do  |f| %>
            <%=f.input :city %>
            <%=f.input :style, collection: ["Bobo", "Ancien", "Classique", "Design"] %>
            <%=f.input :area %>
            <%=f.input :modular_furniture, as: :boolean %>
            <%=f.input :exceptional_view, as: :boolean %>
            <div class="row title-fieldset">
              <button type="submit" class="btn btn-danger">Continuer</button>
            </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>










































