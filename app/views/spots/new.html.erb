<div class="background">
  <div class="title-home">
    <div class="container">
      <div class="row">
        <div class=" col-xs-8 col-sm-10 col-xs-offset-1 text-center">
          <h1 class="title-white">BIENVENUE DANS VOTRE STUDIO</h1>
          <div class="form-group pt-xs">
              <%= form_tag('/spots/new', method: 'get') do %>

                 <%= text_field_tag :city, nil, placeholder: "City", class: 'form-control' %>
                 <%= text_field_tag :style, nil, placeholder: "Style", class: 'form-control' %>
                 <%= text_field_tag :area, nil, placeholder: "Area", class: 'form-control' %>

                 <%= submit_tag "Search", class: 'btn btn-primary' %>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
