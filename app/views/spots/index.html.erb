<div class="container">
  <div class="row">
    <div class="col-md-7">
      <!-- form to add specific filters -->
      <div class="row">
        <div class="col-xs-12">
          <%= form_tag('/index', method: 'get') do %>
            <%= label_tag(:style, "Style:") %>
            <%= text_field_tag(:style) %>
            <%= label_tag(:price, "Price:") %>
            <%= text_field_tag(:price) %>
            <%= label_tag(:area, "Area:") %>
            <%= text_field_tag(:area) %>
            <%= label_tag(:view, "Exceptional view:") %>
            <%= check_box_tag(:view) %>
            <%= label_tag(:furniture, "Modular furniture:") %>
            <%= check_box_tag(:furniture) %>
            <%= label_tag(:exposition, "Exposition:") %>
            <%= text_field_tag(:exposition) %>

            <%= submit_tag("Search") %>
          <% end %>
        </div>
      </div>

      <!-- show all spots according to filters -->
      <% @spots.each do |spot| %>
        <% if spot.visible = true %>
          <div class="col-md-6">
            <div class="card">
              <p><%= spot.title %></p>
              <p><%= spot.price.to_s + ' â‚¬/day' %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-md-5">
      <!-- map -->
      <div id="map"></div>

    </div>
  </div>
</div>

