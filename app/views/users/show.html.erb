<ul class="nav nav-pills nav-justified">
  <li role="presentation" class="active"><%=link_to "Profil", edit_user_registration_path(@user) %>
</li>
  <li role="presentation"><%=link_to "Review", "#"  %></li>
  <li role="presentation"><%=link_to "Messages", "#"  %></li>
</ul>
<div class="background-grey">
<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-2">
      <div class="mg-picture">
        <%= image_tag @user.picture %>
      </div>
    </div>
    <div class="col-md-6 ">
      <div class="mg-welcome-profile">
        <h1>Bonjour, je m'appelle <%= @user.first_name %></h1>
        <p>Membre depuis <%= @user.created_at.strftime('%B %Y') %></p>
        <% if @user == current_user %>
        <%=link_to "Modifier le Profil", edit_user_registration_path(@user) %>
        <% end %>
        <h2 class="mg-spots">My spots:</h2>
          <div class="row">
            <div class="col-xs-12" style="padding-top: 30px;">
              <% if @user.spots.empty? %>
                <p><%= "You have no spot yet" %></p>
                <% else %>
                <% @user.spots.each do |spot| %>
                  <div class="col-md-6">
                    <div class="card">
                      <span class="card-bg" style="background-image: url(<%= image_path 'loft1.png' %>)"></span>
                      <span class="card-gradient"></span>
                      <span class="card-price">
                        <%= spot.price.to_i.to_s + ' €/day' %>
                      </span>
                      <span class="card-text">
                        <h3><%= spot.title %></h3>
                      </span>
                      <%= link_to "", spot_path(spot),class: 'card-link' %>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        <h2 class="mg-spots">My Bookings:</h2>
          <div class="row">
            <div class="col-xs-12" style="padding-top: 30px;">
              <% if @user.spots.empty? %>
                <p><%= "You have no spot yet" %></p>
                <% else %>
                <% @user.spots.each do |spot| %>
                  <h3><%= spot.title %></h3>
                  <% if Booking.find_by_spot_id(spot.id).nil? %>
                    <p><%= "You have no booking for this spot yet" %></p>
                    <% else %>
                    <% Booking.find_by_spot_id(spot.id).each do |booking|%>
                      <div class="col-md-6">
                        <div class="card">
                          <span class="card-bg" style="background-image: url(<%= image_path 'loft1.png' %>)"></span>
                          <span class="card-gradient"></span>
                          <span class="card-price">
                            <%= booking.total_price.to_i.to_s + ' €/day' %>
                          </span>
                          <span class="card-text">
                            <h3><%= 'from' + booking.start_time.strftime('%A, %b %d') + 'to' + booking.end_time.strftime('%A, %b %d') %></h3>
                          </span>
                          <%= link_to "", spot_path(spot),class: 'card-link' %>
                        </div>
                      </div>
                    <% end %>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>
</div>



