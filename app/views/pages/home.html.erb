

<div class="background">
  <div class="bg-gradient flex">
    <div class="form-group">
      <%= form_tag('/spots', method: 'get', :class => "form-inline") do %>
         <div class="title-home text-right"><%= select_tag :city, options_for_select(%w( PARIS LYON BDX )) %><i class="fa fa-arrow-circle-down"></i> EST VOTRE STUDIO</div>
         <div class="text-center">
          <%= submit_tag "Find your perfect place", class: 'btn btn-primary' %></div>
      <% end %>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <% 6.times do %>
      <div class="col-sm-4">
        <div class="card">
          <span class="card-bg" style="background-image: url(<%= image_path 'http://kevinfluchaire.com/wp-content/uploads/2012/06/MakingOF_CLIPKevin_175.jpg' %>)"></span>
          <span class="card-gradient"></span>
          <span class="card-price">
            <%= @spots.first.price.to_i.to_s + ' â‚¬/day' %>
          </span>
          <%= link_to "", spot_path(@spots.first),class: 'card-link' %>
        </div>
        <div class="card-detail">
          <div><%= @spots.first.title %></div>
        </div>
      </div>
    <% end %>
  </div>
</div>





